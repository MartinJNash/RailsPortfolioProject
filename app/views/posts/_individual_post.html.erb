      <div id="<%= "post-#{post.id}" %>" class="row">

        <div class="small-9 columns">
          <h4><a href="<%= post_path(post) %>"><%= post.title %></a></h4>
          <p><%= simple_format post.body.truncate(500, separator: ' ') %></p>
        </div>

        <div class="columns small-3">
          <% if policy(post).update? %>
            <%= link_to 'Edit', edit_post_path(post) %>          
          <% end %>

          <% if policy(post).destroy? %>
            <%= link_to 'Destroy', post, id: "delete_post_#{post.id}", method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </div>

      </div>
