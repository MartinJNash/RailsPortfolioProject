<div class="row">
  <div class="columns large-12">
    
    <% @projects.each do |project| %>
      <div class="project" id="<%= dom_id(project) %>">
      <h3><%= project.name %></h3>
      <p><%= project.technologies_used %></p>
      

      <% if policy(Project).update? %>
        <div class="nav">
          <%= link_to 'Show', project %>
          <%= link_to 'Edit', edit_project_path(project) %>
          <%= link_to 'Destroy', project, method: :delete, data: {confirm: "Really delete this project?"}  %>
        </div>
      <% end %>

    <% end %>

    <% if policy(Project).create?  %>
      <div id='new_project_creation_area'>
        <%= link_to "New Project", new_project_path, id: 'new_link', remote: true %>
      </div>
    <% end %>


  </div>
</div>

